# ===========================================
# VIADORA E-TİCARET UYGULAMASI
# ENVIRONMENT VARIABLES
# ===========================================

# ===========================================
# SERVER KONFİGÜRASYONU
# ===========================================
PORT=6602
NODE_ENV=development

# ===========================================
# VERİTABANI KONFİGÜRASYONU
# ===========================================
MONGODB_URI=mongodb://localhost:27017/viadora
MONGODB_URI_PROD=mongodb+srv://username:password@cluster.mongodb.net/viadora

# ===========================================
# JWT KONFİGÜRASYONU
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-key-here
JWT_REFRESH_EXPIRES_IN=30d

# ===========================================
# EMAIL KONFİGÜRASYONU
# ===========================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@viadora.com

# ===========================================
# STRIPE ÖDEME KONFİGÜRASYONU
# ===========================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ===========================================
# FRONTEND KONFİGÜRASYONU
# ===========================================
FRONTEND_URL=http://localhost:6600
NEXT_PUBLIC_API_URL=http://localhost:6602
NEXT_PUBLIC_WS_URL=ws://localhost:6602
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your_vapid_public_key_here

# ===========================================
# LOGGING KONFİGÜRASYONU
# ===========================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# ===========================================
# DOSYA YÜKLEME KONFİGÜRASYONU
# ===========================================
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# ===========================================
# RATE LIMITING KONFİGÜRASYONU
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
LOGIN_RATE_LIMIT_MAX=5
LOGIN_RATE_LIMIT_WINDOW=900000

# ===========================================
# GÜVENLİK KONFİGÜRASYONU
# ===========================================
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-here
CORS_ORIGIN=http://localhost:6600,http://127.0.0.1:6600

# ===========================================
# GAMIFICATION KONFİGÜRASYONU
# ===========================================
GAMIFICATION_ENABLED=true
POINTS_PER_PURCHASE=10
POINTS_PER_REVIEW=5
POINTS_PER_LOGIN=1

# ===========================================
# NOTIFICATION KONFİGÜRASYONU
# ===========================================
PUSH_NOTIFICATIONS_ENABLED=true
EMAIL_NOTIFICATIONS_ENABLED=true
SMS_NOTIFICATIONS_ENABLED=false

# ===========================================
# CACHE KONFİGÜRASYONU
# ===========================================
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600
SESSION_STORE=memory

# ===========================================
# MONITORING KONFİGÜRASYONU
# ===========================================
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
DEBUG_MODE=false
